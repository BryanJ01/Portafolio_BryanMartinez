---
import RotatingTextComponent from "../components/ReactBits/RotatingText";
---

<div class="flex items-center gap-4 px-4 sm:px-6 md:px-8">
  <span class=" justify-between max-w-7xl pl-4 mx-auto text-xl md:text-5xl font-bold text-neutral-800 dark:text-black font-sans">
    <strong>Developer</strong>
  </span>
  <RotatingTextComponent
    client:load
    texts={["Front-End", "Back-End", "Full-Stack"]}
    mainClassName="text-base sm:text-lg md:text-xl lg:text-5xl px-3 bg-cyan-300 text-black overflow-hidden py-1 rounded-lg font-sans text-[#000000] font-bold"
    staggerFrom="last"
    initial={{ y: "100%" }}
    animate={{ y: 0 }}
    exit={{ y: "-120%" }}
    staggerDuration={0.025}
    splitLevelClassName="overflow-hidden pb-1"
    transition={{ type: "spring", damping: 30, stiffness: 400 }}
    rotationInterval={2000}
  />
</div>